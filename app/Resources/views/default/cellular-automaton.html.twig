{% extends 'display.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    <script src="js/cellular-automaton.js"></script>
    <script>
        var speed = 500;
        var app = null;
        var display = null;

        $(document).ready(function () {
            $('#display').addClass('ca');
            app = new CellularAutomaton(31, 16);
            display = new Display(app);
            display.run(speed);
        });
    </script>
{% endblock %}