{% extends 'board.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="css/cellular-automaton.css" rel="stylesheet"/>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="js/cellular-automaton.js"></script>
    <script>
        var speed = 500;
        var app = null;
        var board = null;

        $(document).ready(function () {
            board = new Board(16, 31);

            app = new CellularAutomaton(board);

            run(app, speed);
        });
    </script>
{% endblock %}