{% extends 'display.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    <script src="js/game-of-life-patterns.js"></script>
    <script src="js/game-of-life.js"></script>
    <script>
        var speed = 200;
        var app = null;
        var display = null;

        var pattern = location.href.replace(/^.*?(\d+).*?$/, '$1');
        pattern = isNaN(pattern) ? null : parseInt(pattern);

        $(document).ready(function () {
            app = new GameOfLife(160, 120);

            if (pattern !== null) {
                app.pattern = pattern <= 0 ? 0 : pattern - 1;
                app.pattern %= app.patterns.length;
                app.nextPattern = function() {};
                app.init();
            }

            display = new Display(app);

            display.run(speed);
        });
    </script>
{% endblock %}