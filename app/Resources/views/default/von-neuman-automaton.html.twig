{% extends 'display.html.twig' %}

{% block stylesheets %}
    {{ parent() }}

    <style>
        #display span.b { background-color: #0000FF; }
        #display span.c { background-color: #FF0000; }
        #display span.d { background-color: #00FF00; }
        #display span.e { background-color: #FFFF00; }
        #display span.f { background-color: #FF00FF; }
        #display span.g { background-color: #FFFFFF; }
        #display span.h { background-color: #00FFFF; }
    </style>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="js/von-neuman-automaton.js"></script>
    <script>
        var speed = 300;
        var app = null;
        var display = null;

        var pattern = location.href.replace(/^.*?(\d+).*?$/, '$1');
        pattern = isNaN(pattern) ? 0 : parseInt(pattern);

        $(document).ready(function () {
            app = new VonNeumanAutomaton(160, 120, pattern);

            display = new Display(app);

            display.run(speed);
        });

    </script>
{% endblock %}