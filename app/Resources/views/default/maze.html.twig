{% extends 'display.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    <script src="js/game-of-life-patterns.js"></script>
    <script src="js/game-of-life.js"></script>
    <script>
        var speed = 150;
        var app = null;
        var display = null;

        var index = location.href.replace(/^.*?(\d+).*?$/, '$1');
        index = isNaN(index) ? 0 : parseInt(index);

        var basepattern = 107;

        $(document).ready(function () {

            var names = {
                'B3/S1234': 'Maze',
                'B37/S1234': 'Maze full of mice',
                'B3/S12345': 'Mazectric'
            };

            var rulestrings = [];

            for(var name in names) {
                rulestrings.push(name);
            }

            app = new GameOfLife(160, 120, rulestrings[index]);
            app.pause = false;
            app.pattern = basepattern;
            app.name = names[app.rulestring] + ' (' + app.rulestring + ')';
            app.slideshow = false;

            app.fetchPattern = function () {
                var pat = this.definitions[this.patterns[this.pattern]];
                pat.name = 'base: ' + pat.name;
                pat.type = 'p666';
                pat.description = '';
                return pat;
            };

            app.nextPattern = function() {
                this.pattern = basepattern;
            };

            display = new Display(app);
            display.run(speed);
        });
    </script>
{% endblock %}