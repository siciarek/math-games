{% extends 'cdisplay.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    <script src="js/langtons-ant.js"></script>
    <script>
        var speed = 1;
        var app = null;
        var display = null;

        var pattern = location.href.replace(/^.*?(\d+).*?$/, '$1');
        pattern = isNaN(pattern) ? 0 : parseInt(pattern);

        $(document).ready(function () {
            app = new LangtonsAnt(480, 240, pattern);

            display = new Display(app, 2);

            display.run(speed);
        });
    </script>
{% endblock %}